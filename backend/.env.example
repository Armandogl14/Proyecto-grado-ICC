# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - CONTRACT ANALYSIS API
# =============================================================================

# Django Core Settings
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-droplet-ip

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/contract_analysis_db
DB_SSL_REQUIRE=True

# Redis Configuration (Celery & Cache)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI API (para análisis ML)
OPENAI_API_KEY=your-openai-api-key-here

# Together AI API (alternativa)
TOGETHER_API_KEY=your-together-api-key-here

# Static Files & Media
STATIC_URL=/static/
STATIC_ROOT=/var/www/contract-analysis/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/contract-analysis/media/

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# Email Configuration (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/contract-analysis/django.log

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
